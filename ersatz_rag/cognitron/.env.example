# Cognitron Medical-Grade Configuration

# API Keys for LLM Confidence Tracking (Optional but Recommended)
# OpenAI API provides logprobs for medical-grade confidence calculation
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini API as fallback model
GOOGLE_API_KEY=your_gemini_api_key_here

# Medical-Grade Quality Thresholds
# Critical threshold for medical-grade decisions (95%)
COGNITRON_CRITICAL_THRESHOLD=0.95

# Production threshold for reliable decisions (85%)  
COGNITRON_PRODUCTION_THRESHOLD=0.85

# Display threshold - suppress below this confidence (70%)
COGNITRON_DISPLAY_THRESHOLD=0.70

# Storage Paths (Optional - defaults to ~/.cognitron/)
# COGNITRON_INDEX_PATH=/path/to/knowledge/index
# COGNITRON_MEMORY_PATH=/path/to/case/memory.db

# Advanced Configuration
# Case memory confidence threshold for storage
COGNITRON_MEMORY_THRESHOLD=0.85

# Maximum topics to generate during indexing
COGNITRON_MAX_TOPICS=20

# Embedding model for semantic search
COGNITRON_EMBEDDING_MODEL=all-MiniLM-L6-v2

# LEANN Configuration (if available)
LEANN_INDEX_TYPE=hnsw
LEANN_CHUNK_SIZE=512

# Logging Configuration
COGNITRON_LOG_LEVEL=INFO
COGNITRON_LOG_FILE=cognitron.log