      "name": "Septic Arthritis",
      "diagnostics": {
        "orders": [
          "Synovial fluid gram stain",
          "Synovial fluid cultures"
        ],
        "timing": "Collection of synovial fluid samples should occur prior to the administration of antibiotics.",
        "deescalationRules": [
          "Therapy should be tailored based on gram stain, culture, and sensitivities."
        ]
      },
      "pathways": [
        {
          "label": "Atraumatic bacterial arthritis (Low-Risk)",
          "eligibilityCriteria": {
            "riskFlags": [
              "atraumatic"
            ],
            "clinicalState": [
              "stable"
            ]
          },
          "duration": {
            "notes": [
              "Duration depends on the causative pathogen and clinical scenario."
            ]
          },
          "consults": [
            "Please consult infectious diseases if assistance needed."
          ],
          "treatmentRecommendations": [
            {
              "allergyProfile": [
                "none",
                "pcn_mild_rash",
                "pcn_severe_anaphylaxis"
              ],
              "regimens": [
                {
                  "rank": 1,
                  "primaryDrugs": [
                    {
                      "name": "vancomycin",
                      "routes": [
                        "IV"
                      ],
                      "variants": [
                        {
                          "label": "Standard Dosing",
                          "weightBasis": "TBW",
                          "loadingDose": {
                            "dose": "20-25 mg/kg",
                            "instructions": "Administer a one-time loading dose (max 2500 mg) if no vancomycin in last 24h. Do not withhold for renal function. Use 25 mg/kg for ICU/sepsis/ECMO/augmented renal clearance."
                          }
                        }
                      ]
                    }
                  ],
                  "notes": [
                    "For vancomycin allergy, substitute with Linezolid or Daptomycin."
                  ]
                }
              ]
            }
