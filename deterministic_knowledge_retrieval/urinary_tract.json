  "infections": [
    {
      "id": "urinary_tract_infection",
      "name": "Urinary Tract Infections (UTI)",
      "diagnostics": {
        "orders": [
          "Urinalysis with reflex to urine culture (Ucx)"
        ],
        "timing": "Obtain prior to antibiotic initiation whenever possible.",
        "deescalationRules": [],
        "notes": [
          "Pyuria on urinalysis (UA) alone is not an indication for antibiotic therapy. Always assess for symptoms (urinary symptoms, fever, hemodynamic instability) unless pregnant, planned urologic procedure, recent kidney transplant, neutropenia."
        ]
      },
      "pathways": [
        {
          "label": "Cystitis (Urinary symptoms only)",
          "eligibilityCriteria": {
            "clinicalState": [
              "no_fever",
              "no_systemic_symptoms"
            ]
          },
          "duration": {
            "minDays": 1,
            "maxDays": 7,
            "notes": [
              "Nitrofurantoin: 5 days",
              "TMP/SMX: 3 days",
              "Fosfomycin: 1 day",
              "Cefazolin: 3-5 days",
              "Cephalexin/Cefpodoxime: 5-7 days",
              "In patients with functional or structural GU abnormalities, 7 days is often sufficient."
            ]
          },
          "consults": [
            "Discuss with ID if alternative regimen needed."
          ],
          "treatmentRecommendations": [
            {
              "allergyProfile": [
                "none",
                "pcn_mild_rash"
              ],
              "regimens": [
                {
                  "rank": 1,
                  "primaryDrugs": [
                    {
                      "name": "nitrofurantoin",
                      "routes": ["PO"],
                      "variants": [{
                        "label": "Standard dose",
                        "dosingByRenalFunction": [
                          {"renalCategory": "gt_50", "dose": "100mg", "frequency": "q12h"},
                          {"renalCategory": "50_30", "dose": "CONTRAINDICATED"},
                          {"renalCategory": "29_10", "dose": "CONTRAINDICATED"},
                          {"renalCategory": "lt_10_no_hd", "dose": "CONTRAINDICATED"},
                          {"renalCategory": "hd", "dose": "CONTRAINDICATED"},
                          {"renalCategory": "crrt", "dose": "CONTRAINDICATED"}
                        ],
                        "contraindications": ["CONTRAINDICATED in CrCl <=60ml/min"]
                      }]
                    }
                  ]
                },
                {
                  "rank": 2,
                  "primaryDrugs": [
                    {
                      "name": "fosfomycin",
                      "routes": ["PO"],
                      "variants": [
                        {"label": "Uncomplicated cystitis", "dose": "3g", "frequency": "x 1 dose"},
                        {"label": "Complicated cystitis (off-label)", "dose": "3g", "frequency": "every other day x 3 doses"}
                      ]
                    }
                  ]
                },
                {
                  "rank": 3,
                  "primaryDrugs": [
                    {
                      "name": "trimethoprim-sulfamethoxazole",
                      "routes": ["PO"],
