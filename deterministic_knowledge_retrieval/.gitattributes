# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# Text files
*.txt text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
